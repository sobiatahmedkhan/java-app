pipeline {
    agent any

    stages{
        stage ('building project') {
            steps {
                script {
                    sh 'mvn clean  install'
                }
            }
        }

     stage ('creating docker image') {
            steps {
                script {
                    sh 'docker build -t java-app .'
                }
            }
        }

     stage ('pushing docker image') {
            steps {
                script {
                    sh 'docker push jimsparrow/java-app:latest'
                }
            }
        } 
               
    }
}
