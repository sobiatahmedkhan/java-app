pipeline {
    agent any
    
    stages{
        stage ('building project') {
            steps {
                script {
                    sh 'mvn clean  install'
                }
            }
        }

     stage ('creating docker image') {
            steps {
                script {
                    sh 'docker build -t java-app .'
                }
    
            }
        }
	    
     withCredentials ([usernamePassword(credentialsId: 'Docker Hub Credentials', passwordVariable: '$pass', usernameVariable: '$user')])
			 {	 // the code here can access $pass and $user	
             }

	 stage ('pushing to docker-hub') {
            steps {
                script {
                    sh 'docker logout'
                    
                
                    
                }
	        }
        }

        withCredentials([
                        usernamePassword(credentials: 'Docker Hub Credentials' , usernameVariable: USER , usernamePassword:PWD)
                    ]){
                        sh 'docker login -u ${USER} -p ${PWD} docker.io'
                        sh 'docker push jimsparrow/java-app:latest'
                        sh 'docker logout'
                    }

	 stage ('removing docker image') {
            steps {
                script {
                    sh 'docker rmi java-app'
                }

            }
        } 
               
    }
}
